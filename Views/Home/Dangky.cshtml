@model WedSiteBanHang.Models.ThanhVien
@using CaptchaMvc.HtmlHelpers;
@using CaptchaMvc;

@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<div class="container mt-4">
    <div class="Dangky bg-light p-4 shadow rounded" style="max-width: 1000px; margin: 0 auto;">
        <h2 class="text-center mb-4 text-primary">Đăng ký thành viên</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <!-- Cột trái: Thông tin cá nhân -->
                <div class="col-md-6">
                    <h4 class="text-secondary">Thông tin cá nhân</h4>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TaiKhoan)
                        @Html.TextBoxFor(model => model.TaiKhoan, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.HoTen)
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Địa chỉ</label>
                        @Html.TextBox("DiaChi", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBox("Email", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.TextBox("SoDienThoai", null, new { @class = "form-control" })
                    </div>
                </div>

                <!-- Cột phải: Thông tin đăng nhập -->
                <div class="col-md-6">
                    <h4 class="text-secondary">Thông tin đăng nhập</h4>

                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.Password("MatKhau", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        @Html.Password("NhapLaiMatKhau", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Câu hỏi bí mật</label>
                        @Html.DropDownList("CauHoi", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Câu trả lời</label>
                        @Html.TextBox("CauTraLoi", null, new { @class = "form-control" })
                    </div>

                    <div class="form-group mt-3">
                        @Html.Captcha(5)
                    </div>

                    <div class="form-group mt-4 text-right">
                        <input type="submit" value="Xác nhận" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.ThongBao as string))
        {
            <div class="alert alert-danger mt-3 text-center">@ViewBag.ThongBao</div>
        }
    </div>
</div>
