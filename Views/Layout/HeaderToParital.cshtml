        color: #222;
        width: 350px;
        margin-top: 80px;
        box-shadow: 0 0 10px rgba(0, 188, 212, 0.3);
    }

    .form-info input[type="text"],
    .form-info input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #00bcd4;
        border-radius: 6px;
        margin-bottom: 10px;
        color: #222;
    }

    .login-buttons input[type="submit"],
    .login-buttons a {
        display: inline-block;
        background-color: #00bcd4;
        color: white;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-right: 5px;
        font-weight: bold;
    }

    .login-buttons input[type="submit"]:hover,
    .login-buttons a:hover {
        background-color: #0097a7;
    }

    .form-info p a {
        font-size: 13px;
        color: #444;
        text-decoration: none;
    }

    .form-info p a:hover {
        text-decoration: underline;
    }

    #colse-form {
        color: white;
        background-color: #00bcd4;
        border: none;
        padding: 2px 8px;
        border-radius: 4px;
        cursor: pointer;
    }

    .clearfix {
        clear: both;
    }
    .search-box {
    display: flex;
    align-items: center;
    max-width: 400px;
    margin: 0 auto; /* căn giữa nếu cần */
}

.search-box input[type="text"] {
    flex: 1;
    padding: 8px 12px;
    border: 1px solid #00bcd4;
    border-radius: 5px 0 0 5px;
    outline: none;
}

.search-box input[type="submit"] {
    padding: 8px 16px;
    border: none;
    background-color: #00bcd4;
    color: white;
    border-radius: 0 5px 5px 0;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.search-box input[type="submit"]:hover {
    background-color: #0097a7;
}

</style>

