@using WedSiteBanHang.Models
@using PagedList.Mvc;
@model PagedList.IPagedList<SanPham>

@{
    ViewBag.Title = "KQTimKiem";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<!-- Form tìm kiếm Ajax -->
@using (Ajax.BeginForm("KQTimKiemPartial", "TimKiem", new AjaxOptions { UpdateTargetId = "KQTimKiem", InsertionMode = InsertionMode.Replace }))
{
    <div class="search-box">
        <input type="text" id="txtTimKiem" name="sTuKhoa" placeholder="Nhập tên sp" />
        <button type="submit" id="btnTimKiem">🔍 Tìm</button>
    </div>
}

<div id="KQTimKiem">
    <div class="col-md-9 product1">
        <div class="bottom-product">
            @foreach (var item in Model.OrderBy(n => n.DonGia))
            {
                <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                    <div class="product-at">
                        <a href="single.html">
                            <img class="img-responsive" src="@Url.Content("~/Content/images/" + item.HinhAnh)" alt="" style="width: 150px; height: 150px; margin: auto;">
                            <div class="pro-grid">
                                <span class="buy-in">Đặt Mua</span>
                            </div>
                        </a>
                    </div>
                    <p class="tun">@item.TenSP</p>
                    <a href="@Url.Action("ThemGioHang", "GioHang", new { @MaSP = item.MaSP, @strURL = Request.Url.ToString() })" class="item_add">
                        <p class="number item_price"><i> </i>@item.DonGia.Value.ToString("#,##") ₫</p>
                    </a>
                </div>
            }

            <div class="clearfix"></div>
        </div>
    </div>

    <div class="dlink text-center" style="margin-top: 30px;">
        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("KQTimKiem", new { page = page, @sTuKhoa = ViewBag.TuKhoa }))
    </div>
</div>

<!-- Style CSS -->
<style>
    .search-box {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 30px 0;
    }

    #txtTimKiem {
        width: 400px; /* Dài hơn */
        padding: 10px 15px;
        border: 2px solid #00bcd4;
        border-right: none;
        border-radius: 30px 0 0 30px;
        font-size: 16px;
        outline: none;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
    }

    #txtTimKiem:focus {
        box-shadow: 0 0 5px #00bcd4;
        background-color: #ffffff;
    }

    #btnTimKiem {
        background-color: #00bcd4;
        color: white;
        padding: 10px 20px;
        border: 2px solid #00bcd4;
        border-left: none;
        border-radius: 0 30px 30px 0;
        cursor: pointer;
        font-weight: bold;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    #btnTimKiem:hover {
        background-color: #0097a7;
        transform: scale(1.03);
    }

    .product-at img {
        display: block;
        margin: auto;
    }

    .dlink {
        text-align: center;
        font-weight: bold;
        font-size: 1.1em;
    }
</style>
